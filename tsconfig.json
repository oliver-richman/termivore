{
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"lib": ["es2018"],
		"allowJs": false,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"declaration": true,
		"removeComments": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
